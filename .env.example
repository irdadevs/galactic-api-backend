# Production environment template
NODE_ENV=
PORT=
CORS_ORIGIN=

# Database (production)
# Prefer managed PostgreSQL in production. If self-hosted in compose, use service host: postgres
PGHOST=
PGPORT=
POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=
DATABASE_URL=
PGSSL=
PGMAX=
PGIDLE_TIMEOUT_MS=

# Redis (production)
# Prefer managed Redis with TLS/auth in production.
REDIS_PASSWORD=
REDIS_URL=
REDIS_USERNAME=

# JWT (production) - use long random secrets
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_ISSUER=
JWT_AUDIENCE=

# SMTP (production)
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Stripe (production)
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=

# Maintenance
MAINTENANCE_JOBS_ENABLED=
MAINTENANCE_RUN_ON_START=
MAINTENANCE_USERS_ARCHIVE_DAYS=
MAINTENANCE_LOGS_ARCHIVE_DAYS=
MAINTENANCE_METRICS_ARCHIVE_DAYS=
MAINTENANCE_DONATIONS_ARCHIVE_DAYS=
MAINTENANCE_HOUSEKEEPING_INTERVAL_MIN=
MAINTENANCE_USERS_ARCHIVE_INTERVAL_MIN=
MAINTENANCE_PARTITION_PLAN_INTERVAL_MIN=

# Tests
# true: use real Postgres/Redis in e2e+integration suites
# false/empty: run mocked suites (default)
RUN_REAL_INFRA_TESTS=
